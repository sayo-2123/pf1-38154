<div class='tag-form'>
  <h1>新規タグ</h1>
  <%=form_with model: @room, local: true do |f|%>
    <div class='tag-form__field'>
      <div class='tag-form__field--left'>
        <%= f.label :name, :タグ名, class: 'tag-form__label'%>
      </div>
      <div class='tag-form__field--right'>
        <%= f.text_field :name, class: 'chat__room_name tag-form__input', placeholder: 'タグ名を入力してください'%>
      </div>
    </div>
    <div class='tag-form__field'>
    </div>
    <div class='tag-form__field'>
      <div class='tag-form__field--left'>
        <label class='tag-form__label' for='chat_room_チャットメンバー'>共有メンバー</label>
      </div>
      <div class='tag-form__field--right'>
      
      <%# 共有する人を指定する %>
      <select name="room[user_ids][]">
          <option value="">共有メンバーを選択してください</option>
          <%User.where.not(id: current_user.id).each do |user| %>
            <option value=<%= user.id %>><%= user.name %></option>
          <% end %>
        </select>
        <input name="room[user_ids][]" type="hidden" value=<%= current_user.id %>>
      </div>
      <div>
     
</div>
      <%# 指定 %>

    </div>
    <div class='tag-form__field'>
      <div class='tag-form__field--left'></div>
      <div class='tag-form__field--right'>
        <%= f.submit "Keep Tag" ,class: 'tag-form__action-btn' %>

      </div>
    </div>
  <% end %>
</div>
